<% if @category.errors.any? %>
  <div class="ui negative message">
  <i class="close icon"></i>
    <% @category.errors.full_messages.each do |msg| %>
      <p><%= msg %></p>
    <% end %>
  </div>
<% end %>

<div class="ui grid">
  <div class="three column row">
    <div class="column"></div>
    <div class="column">
    <%= form_for(@category, url: categories_path(@category), html: {method: 'post', class: 'ui form'}) do |f| %>
        <div class="ui raised segment">
            
            <div class="field">
              <label>カテゴリ名</label>
              <%= f.text_field :name, class: "" %>
            </div>
            
          <div class="actions">
            <%= f.submit "登録", class: 'ui button'%>
          </div>
        </div>
        <% end %>
    </div>
    <div class="column"></div>
</div>
