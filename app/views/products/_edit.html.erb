<% if @product.errors.any? %>
  <div class="ui negative message">
  <i class="close icon"></i>
    <% @product.errors.full_messages.each do |msg| %>
      <p><%= msg %></p>
    <% end %>
  </div>
<% end %>


<div class="ui accordion">
    <div class="title">
      <i class="dropdown icon"></i>
      編集
    </div>
    <div class="word-break content">
        <%= form_for(product, url: product_path(product), html: {method: 'patch', class: 'ui form'}) do |f| %>

            <div class="field">
              <label>商品名</label>
              <%= f.text_field :name, class: "" %>
            </div>
            
            
            <div class="field">
              <label>カテゴリ</label>
              <%= f.select :category,  options_for_select(["飲食店", "無所属", "その他"]), {}, { class: 'ui fluid dropdown' } %>
            </div>
            
            <div class="field">
              <label>画像</label>
              <%= f.text_field :url %>
            </div>
            
            <div class="field">
              <label>説明</label>
              <%= f.text_area :description %>
            </div>
            
            <div class="field">
              <label>スイッチ</label>
              <%= f.select :switch,  options_for_select(["オン", "オフ"]), {}, { class: 'ui fluid dropdown' } %>
            </div>
            
          <div class="actions">
            <%= f.submit "更新", class: 'ui button'%>
          </div>
        <% end %>
    </div>
</div><br>