<% if @product.errors.any? %>
  <div class="ui negative message">
  <i class="close icon"></i>
    <% @product.errors.full_messages.each do |msg| %>
      <p><%= msg %></p>
    <% end %>
  </div>
<% end %>

<div class="ui grid">
  <div class="three column row">
    <div class="column"></div>
    <div class="column">
        <%= form_for(@product, url: products_path(@product), html: {method: 'post', class: 'ui form'}) do |f| %>
        <div class="ui raised segment">
            
            <div class="field">
              <label>商品名</label>
              <%= f.text_field :name, class: "" %>
            </div>
            
            
            <div class="field">
              <label>カテゴリ</label>
              <%= f.select :category,  options_for_select(["飲食店", "無所属", "その他"]), {}, { class: 'ui fluid dropdown' } %>
            </div>

            <div class="field">
              <label>画像</label>
              <%= f.text_field :url %>
            </div>
            
            <div class="field">
              <label>説明</label>
              <%= f.text_area :description %>
            </div>
            
            
            <div class="field">
              <label>スイッチ</label>
              <%= f.select :switch,  options_for_select(["オン", "オフ"]), {}, { class: 'ui fluid dropdown' } %>
            </div>
            
            
          <div class="actions">
            <%= f.submit "登録", class: 'ui button'%>
          </div>
        </div>
        <% end %>
    </div>
    <div class="column"></div>
</div>
