<title>レビュッター | <%= @product.name %>のレビュー </title>
<div class="ui grid" style="padding: 10px;">
  <%= render 'shares/rank' %>

  <div class="eight wide column">
        <table class="ui celled striped table">
          <thead>
            <tr><th colspan="3">
              <%= @product.name %>
            </th>
          </tr></thead>
          <tbody>
            <tr>
              <td class="collapsing">イメージ</td>
              <td><%= image_tag(@product.url, :class => "ui fluid image") if !@product.url.nil? %></td>
            </tr>
            <tr>
            <tr>
              <td class="collapsing">カテゴリ</td>
              <td><span class="ui orange label"><%= @product.category %></span></td>
            </tr>
            <tr>
              <td class="collapsing">PV</td>
              <td><%= @product.rank %></td>
            </tr>
            <tr>
              <td class="collapsing">内容</td>
              <td><%= @product.description %></td>
            </tr>
            </tbody>
        </table>
        <% @reviews.each do |tweet| %>
        <div class="ui raised segment">
           <%= image_tag(tweet.url, :class => "ui image", :style => "margin-bottom: 10px;") if !tweet.url.nil? %>
           <%= image_tag(tweet.image, :class => "ui image", :style => "border-radius: 50%;") if !tweet.image.nil? %>
           <span style="color: purple;"><%= "" + tweet.name %></span><br>
           <span style="color: gray;"><%=  time_ago_in_words(tweet.date)+"前" %></span><br>
           <%= tweet.text %><br>
           <%= link_to "元のページを表示", "#{tweet.link}", { :target => "_blank"} %><br>
        </div>
        <% end %>
  </div>
  <div class="four wide column">
  <%= render 'shares/comment' %>

</div>
